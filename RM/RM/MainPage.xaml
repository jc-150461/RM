<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RM"
             x:Class="RM.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="重さ(kg)"
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="Weight"
                  Text="     "
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"/>
            <Label Text="回数"
                   HorizontalOptions="CenterAndExpand"/>
            <Entry x:Name="Leg"
                   Text="     "
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
            <Button Text="計算"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    Clicked="Button_Clicked"/>

            <Label x:Name="RMText" Text="あなたの１RMは"
                   HorizontalOptions="CenterAndExpand"/>

            <!--友達を表示するタブ-->
            <views:FrendPageTab/>
            <!--トークを表示するタブ-->
            <views:TalkPageTab/>
            <!--タイムラインを表示するタブ-->
            <views:TimelinePageTab/>
            <!--ニュースを表示するタブ-->
            <views:NewsPageTab/>
            <!--設定を表示するタブ-->
            <views:SettingPageTab/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>